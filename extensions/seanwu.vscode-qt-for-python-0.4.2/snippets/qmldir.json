{
    "Module Identifier Declaration": {
        "prefix": "module",
        "body": [
            "module ${1:ModuleIdentifier}"
        ],
        "description": "Declare the module identifier"
    },
    "Type Declaration": {
        "prefix": "type",
        "body": [
            "${1:TypeName} ${2:InitialVersion.Number} ${3:File}"
        ],
        "description": "Declare a QML object type"
    },
    "Singleton Declaration": {
        "prefix": "singleton",
        "body": [
            "singleton ${1:TypeName} ${2:InitialVersion.Number} ${3:File}"
        ],
        "description": "Declare a signleton type."
    },
    "Private Type Declaration": {
        "prefix": "internal",
        "body": [
            "internal ${1:TypeName} ${2:File}"
        ],
        "description": "Declare an private object type."
    },
    "JavaScript File Declaration": {
        "prefix": "js",
        "body": [
            "${1:ResourceIdentifier} ${2:InitialVersion.Number} ${3:JsFile}"
        ],
        "description": "Declare a resource JavaScript file"
    },
    "Plugin Declaration": {
        "prefix": "plugin",
        "body": [
            "plugin ${1:PluginLibName} ${2:Path}"
        ],
        "description": "Declare a plugin"
    },
    "C++ Plugin Class Declaration": {
        "prefix": "classname",
        "body": [
            "classname ${1:C++ plugin class}"
        ],
        "description": "Provide the class name of a C++ plugin"
    },
    "Type Description": {
        "prefix": "typeinfo",
        "body": [
            "typeinfo ${1:File}"
        ],
        "description": "Declare a type description file."
    },
    "Dependency Declaration": {
        "prefix": "depends",
        "body": [
            "depends ${1:ModuleIdentifier} ${2:InitialVersion.Number}"
        ],
        "description": "Declare the dependency of module"
    }
}